@using PortfolioEye.Client.Components.Shared
@using Microsoft.Extensions.Localization
@implements IDisposable

@inject NavigationManager NavigationManager
<AuthorizeView>
    <Authorized>
        <PersonCard Style="background-color: var(--mud-palette-drawer-background);color: var(--mud-palette-drawer-text);"/>
        <MudDivider Style="flex-grow: 0"/>
    </Authorized>
</AuthorizeView>

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">@Localizer?.GetString("Dashboard")</MudNavLink>
    <MudNavLink Href="portfolios" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">@Localizer?.GetString("Portfolios")</MudNavLink>
    <MudNavLink Href="accounts" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">@Localizer?.GetString("Accounts")</MudNavLink>
    <MudNavLink Href="transactions" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">@Localizer?.GetString("Transactions")</MudNavLink>
</MudNavMenu>