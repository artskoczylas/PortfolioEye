@using PortfolioEye.Client.Extensions
@using PortfolioEye.Application.Features.Users.Queries
@using Microsoft.Extensions.Localization

<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <AuthorizeView>
        <Authorized>
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Color="Color.Secondary">
                        @if (UserProfile != null)
                        {
                            @UserProfile.GetInitials()
                        }
                    </MudAvatar>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body2">@context.User.Identity?.Name</MudText>
                </CardHeaderContent>
            </MudCardHeader>
        </Authorized>
        <NotAuthorized>
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudIcon Icon="@Icons.Material.Filled.Person" />
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body2">@Localizer.GetString("UserNotLoggedIn")</MudText>
                </CardHeaderContent>
            </MudCardHeader>
        </NotAuthorized>
    </AuthorizeView>
   
</MudCard>

@code {
    [CascadingParameter]
    public UserProfileResponse?  UserProfile { get;set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
    
    [Inject] public IStringLocalizer<PersonCard> Localizer { get; set; }
    public void Refresh()
    {
        StateHasChanged();
    }
}